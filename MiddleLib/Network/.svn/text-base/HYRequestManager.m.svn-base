#pragma mark - getter & setter

-(NSMutableDictionary*)modelDict
{
    if(!_modelDict){
        _modelDict = [NSMutableDictionary dictionary];
    }
    
    return _modelDict;
}


-(NSMutableDictionary*)responseDict
{
    if(!_responseDict){
